{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="blocLogin">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
            Vous êtes connécté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h2>Connexion</h2>

        <div class="formColumn">
            <label class="labelLogin" for="inputEmail">Adresse mail :</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="inputLogin" autocomplete="email" required autofocus>
        </div>
        <div class="formColumn">
            <label class="labelLogin" for="inputPassword">Mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="inputLogin" autocomplete="current-password" required>
        </div>
        
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
        <div>
            <a class="linkLogin" href="{{ path ('app_forgot_password_request') }}">Mot de passe oublié ?</a>
        </div>
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
            
        <button class="btnLogin" type="submit">Valider</button>
    </form>
</div>

{% endblock %}
