{% extends 'base.html.twig' %}

{% block title %}Changement de votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Changement de votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse mail et nous vous envoyons un lien pour changer votre mot de passe
            </small>
        </div>

        <button class="btn btn-primary">Envoyer le mail de changement de mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
