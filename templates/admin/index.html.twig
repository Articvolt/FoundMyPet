{% extends 'base.html.twig' %}

{% block title %}Panneau administrateur{% endblock %}

{% block body %}
    <div class="panelAdmin">
        <h1 class="titreAdmin">Panneau administrateur</h1>
    
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Pseudonyme</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for membre in membres %}
                        <tr>
                            <td>{{ membre.id }}</td>
                            <td>{{ membre.email }}</td>
                            <td>{{ membre.pseudonyme }}</td>
                            <td>
                                {% if membre.roles is defined %}
                                    {{ membre.roles[0] }}
                            {% else %}
                                    Aucun rôle défini
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('admin_delete', {'id': membre.id}) }}">supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
    </div>
{% endblock %}
